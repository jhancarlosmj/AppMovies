<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jhancarlos.appmovies">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MovieActivity"
            android:label="@string/list_of_movies"/>
        <activity
            android:name=".activities.MovieAddActivity"
            android:label="@string/new_movie"/>
        <activity
            android:name=".activities.MovieDetailActivity"
            android:label="@string/detail_movie"/>
    </application>

</manifest>
