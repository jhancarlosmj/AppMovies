<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_movie"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/director_movie"
        android:layout_below="@+id/name_movie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Director" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/year_movie"
        android:layout_below="@+id/director_movie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Year"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country_movie"
        android:layout_below="@+id/year_movie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Country" />
</RelativeLayout>
