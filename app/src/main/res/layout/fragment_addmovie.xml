<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:id="@+id/addmovie_layout"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">


	<EditText
		android:id="@+id/name_movie"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:hint="Name"/>

	<EditText
		android:id="@+id/director_movie"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/name_movie"
		android:hint="Director"/>

	<EditText
		android:id="@+id/year_movie"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/director_movie"
		android:hint="Year"
		android:inputType="number"/>

	<EditText
		android:id="@+id/country_movie"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/year_movie"
		android:hint="Country"/>

	<Spinner
		android:id="@+id/genre_spinner"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:entries="@array/genres"
	    android:layout_below="@+id/country_movie"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"

		/>

</RelativeLayout>
